<Window x:Class="e3tools.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="125" Width="350" 
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    <Grid>
        <Grid Margin="10">
            <StackPanel>
                <ComboBox Name="CboInput" Margin="10" VerticalAlignment="Top" IsEditable="True"/>
                <CheckBox Name="ChkOpt1" Visibility="Collapsed" Margin="10, 0, 10, 10">[Find Across Hospitals]</CheckBox>
            </StackPanel>
        </Grid>
        <Grid VerticalAlignment="Bottom" Background="LightBlue">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="BtnOk" Margin="5" MinWidth="75" Click="BtnOk_Click" IsDefault="True">OK</Button>
                <Button Name="BtnCancel" Margin="0,5,5,5" MinWidth="75" Click="BtnCancel_Click" IsCancel="True">Cancel</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
